---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Picture } from "@astrojs/image/components";
import logoImage from "../../../public/favicon.png";
const menuitems = [
  {
    title: "Services",
    path: "#",
    children: [
      { title: "Fork Networks", path: "/docs/forks" },
      { title: "Event Actions", path: "#", tag: "Coming Soon" },
      { title: "Debug Transactions", path: "#", tag: "Coming Soon" },
    ],
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Docs",
    path: "/docs",
  },
  {
    title: "Contact",
    path: "/contact",
  },
  {
    title: "About",
    path: "/about",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-2xl flex items-center justify-center">
          <Picture
            src={logoImage}
            alt="Astronaut in the air"
            widths={[20, 40, 60]}
            aspectRatio="4:4"
            sizes="(max-width: 40px) 10vw, 40px"
            loading="eager"
            format="avif"
          />
          <span class="font-400 text-slate-800 text-2xl">Tantheta</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a
          class="bg-slate-800 text-white px-4 py-2 rounded text-sm font-medium"
          href="https://app.tantheta.dev"
          target="_blank"
          rel="noopener noreferrer">Go to App</a
        >
      </div>
    </div>
  </header>
</Container>
